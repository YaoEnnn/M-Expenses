<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentAbout">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="53dp"
        app:cardBackgroundColor="#8CCFA6"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="TODO"
                android:src="@drawable/get_in_touch_logo" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="119dp"
            android:layout_height="127dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="#DADADA"
            app:cardCornerRadius="12dp"
            app:cardElevation="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="#8CCFA6">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/location_icon_about" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="81dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:background="#EFEFEF"
                    android:gravity="center"
                    android:text="81, Truong Sa street, Ward 3, District 5, Ho Chi Minh City" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="119dp"
            android:layout_height="127dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="#DADADA"
            app:cardCornerRadius="12dp"
            app:cardElevation="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="#8CCFA6">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/mail_icon_about" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="81dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:background="#EFEFEF"
                    android:gravity="center"
                    android:text="m.expense_helper@gmail.com" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="119dp"
            android:layout_height="127dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#DADADA"
            app:cardCornerRadius="12dp"
            app:cardElevation="100dp"
            app:layout_constraintEnd_toStartOf="@+id/cardView6"
            app:layout_constraintStart_toEndOf="@+id/cardView5"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="#8CCFA6">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/phone_icon_about" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="81dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EFEFEF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="+84 903719888" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="392dp"
            android:layout_height="400dp"
            android:layout_marginTop="8dp"
            app:cardElevation="40dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView4"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#A2EDC0"
                android:orientation="vertical">
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="7dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="@color/black"
                    app:boxBackgroundColor="#E4E4E4"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="#8ccfa6"
                    app:hintTextColor="@color/text_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAboutFragment"
                    app:layout_constraintVertical_bias="0.121">

                    <com.google.android.material.textfield.TextInputEditText

                        android:id="@+id/editTextMessageAboutFragment"
                        android:layout_width="350dp"
                        android:layout_height="130dp"
                        android:hint="Your Message Here"
                        android:textColor="@color/text_color"
                        android:textCursorDrawable="@drawable/cursor_icon_about" />

                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    app:backgroundTint="#8ccfa6"
                    android:id="@+id/editTextPhoneAboutFragment"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="19dp"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="#8CCFA6"
                    android:ems="10"
                    android:hint="Your Phone Number"
                    android:inputType="phone"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/editTextNameAboutFragment"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/text_color"
                    android:text="NAME"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editTextNameAboutFragment"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:ems="10"
                    android:hint="Your Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    app:backgroundTint="#8ccfa6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="149dp"
                    android:layout_marginTop="16dp"
                    android:text="PHONE"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="EMAIL"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextNameAboutFragment" />

                <EditText
                    app:backgroundTint="#8ccfa6"
                    android:id="@+id/editTextTextEmailAboutFragment"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="#8CCFA6"
                    android:textColor="@color/text_color"
                    android:ems="10"
                    android:hint="Your Email"
                    android:inputType="textEmailAddress"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <Button
                    android:id="@+id/btn_about_fragment"
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="144dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="144dp"
                    android:text="SEND MESSAGE"
                    android:background="@drawable/button_about_fragment"
                    app:backgroundTint="@color/material_on_background_disabled"
                    app:backgroundTintMode="add"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

